@page "/"

@using System.Linq
@using DividendAlertBlazorPWA.Services
@using DividendAlertBlazorPWA.Model
@inject IDividendAlertService dividendAlertService


<h5>Your next Dividends : </h5>
<br />


@if (dividendList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="container-fluid">
        @if (dividendList.Any())
        {
            @foreach (Dividend d in dividendList)
            {
                <div class="row">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">


                        <div class="card" style="margin:0px 0px 0px 4px;">
                            <div class="card-body">
                                <h5 class="card-title font-weight-bold">@d.StockName <span style="font-size:12px;font-style:italic;">&nbsp;&nbsp;(@d.Type)</span></h5>
                                <h6 class="card-subtitle text-muted font-italic">@d.PaymentDateFormatted &nbsp;&nbsp;&nbsp; @d.Value</h6>                                
                                <!--<p class="card-text">Ex Date: @d.ExDate</p>-->                                
                            </div>
                        </div>



                    </div>
                </div>
            }
        }
        else
        {
            <p>No dividends</p>
        }
    </div>

}

@code {
    IEnumerable<Dividend> dividendList;
    int lastDays = 30;

    protected override async Task OnInitializedAsync()
    {
        dividendList = await dividendAlertService.GetNextDividendsAsync(DateTime.Today);
    }
}
